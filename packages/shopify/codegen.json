{
  "schema": {
    "https://jr-distribution-boutique.myshopify.com/api/2022-07/graphql.json": {
      "headers": {
        "X-Shopify-Storefront-Access-Token": "69d5d6351d79427c5992de850e631c2f"
      }
    }
  },
  "documents": [
    {
      "./src/**/*.{ts,tsx}": {
        "noRequire": true
      }
    }
  ],
  "generates": {
    "./schema.d.ts": {
      "plugins": ["typescript", "typescript-operations"],
      "config": {
        "scalars": {
          "ID": "string"
        }
      }
    },
    "./schema.graphql": {
      "plugins": ["schema-ast"]
    }
  },
  "hooks": {
    "afterAllFileWrite": ["prettier --write"]
  }
}
